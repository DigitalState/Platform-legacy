{% import 'OroUIBundle::macros.html.twig' as UI %}

<div class="widget-content">
    <div class="row-fluid form-horizontal">
        <div class="responsive-block">
            {{ UI.renderProperty('ds.topic.id.label'|trans, entity.id) }}
            {{ UI.renderProperty('ds.topic.title.label'|trans, entity.defaultTitle) }}
            {{ UI.renderProperty('ds.topic.description.label'|trans, entity.defaultDescription) }}
            {{ UI.renderProperty('ds.topic.icon.label'|trans, entity.icon) }}
            {% set channels = '' %}
            {% for channel in entity.channels %}
                {% set channels = channels ~ '<span class="label label-primary">' ~ channel.defaultTitle ~ '</span>&nbsp;' %}
            {% endfor %}
            {{ UI.renderHtmlProperty('ds.topic.channels.label'|trans, channels) }}
        </div>
        <div class="responsive-block">
            {{ UI.renderProperty('ds.topic.slug.label'|trans, entity.slug) }}
        </div>
    </div>
    {% for widget in ds_widgets({ position: 'ds_topic_topic_entity_topic', context: context }, { entity: entity }) %}
        {{ widget.content|raw }}
    {% endfor %}
</div>
