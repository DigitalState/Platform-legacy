{% extends 'DsAccountBundle:Account:base.html.twig' %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block breadcrumb %}
    <ul class="breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="{{ path('ds_portal_portal_home_index') }}">
                {% trans %}ds.portal.page.portal.home.index.title{% endtrans %}
            </a>
        </li>
        <li>
            <a href="{{ path('ds_accountdashboard_account_dashboard_index') }}">
                {% trans %}ds.account.page.account.home.index.title{% endtrans %}
            </a>
        </li>
        <li>
            <a href="{{ path('ds_accountuserpersona_account_persona_index') }}">
                {% trans %}ds.accountuserpersona.page.account.persona.index.title{% endtrans %}
            </a>
        </li>
        <li class="active">
            {{ persona.definition.title }}
        </li>
    </ul>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h1>
                {% trans %}ds.accountuserpersona.page.account.persona.index.title{% endtrans %}
            </h1>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3>Profile Attributes</h3>
                </div>
                <div class="panel-body">
                    {% include 'DsUserPersonaBundle:Definition:slug/' ~ persona.definition.slug ~ '_edit.html.twig' with { persona: persona } %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
