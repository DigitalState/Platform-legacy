{% extends 'DsAccountBundle:Account:base.html.twig' %}

{% block breadcrumb %}
    <ul class="breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="{{ path('ds_portal_portal_home_index') }}">
                {% trans %}ds.portal.home.page.portal.index.title{% endtrans %}
            </a>
        </li>
        <li>
            <a href="{{ path('ds_accountdashboard_account_dashboard_index') }}">
                {% trans %}ds.account.home.page.account.index.title{% endtrans %}
            </a>
        </li>
        <li>
            <a href="{{ path('ds_accountuserpersona_account_persona_index') }}">
                {% trans %}ds.accountuserpersona.persona.page.account.index.title{% endtrans %}
            </a>
        </li>
        <li class="active">
            {{ persona.definition.title }}
        </li>
    </ul>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h1>
                {% trans %}ds.accountuserpersona.persona.page.account.view.title{% endtrans %}
            </h1>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading clearfix">
                    <h3 class="pull-left">
                        Persona Attributes
                    </h3>
                    <p class="pull-right">
                        <a href="{{ path('ds_accountuserpersona_account_persona_edit', { slug: persona.definition.slug }) }}" class="btn btn-default">Edit</a>
                    </p>
                </div>
                <div class="panel-body">
                    {% include 'DsUserPersonaBundle:Definition:slug/' ~ persona.definition.slug ~ '.html.twig' with { persona: persona } %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
