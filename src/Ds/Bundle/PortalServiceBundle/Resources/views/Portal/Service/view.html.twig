{% extends 'DsPortalBundle:Portal:base.html.twig' %}

{% block breadcrumb %}
    <ul class="breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="{{ path('ds_portal_portal_home_index') }}">
                {% trans %}ds.portal.home.page.portal.index.title{% endtrans %}
            </a>
        </li>
        <li>
            <a href="{{ path('ds_portalservice_portal_service_index') }}">
                {% trans %}ds.portalservice.service.page.portal.index.title{% endtrans %}
            </a>
        </li>
        <li class="active">
            {{ service.titles|localized_value }}
        </li>
    </ul>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h1>
                {{ service.titles|localized_value }}
            </h1>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-lg-8">
            <div class="panel panel-default">
                <div class="panel-body">
                    {{ service.presentations|localized_value|raw }}
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="panel panel-default">
                <div class="panel-body">
                    <p>
                        <form method="post" action="{{ path('ds_portalservice_portal_service_activate', { id: service.id }) }}" class="text-center">
                            <button class="btn btn-primary btn-lg">
                                {{ service.buttons|localized_value }}
                            </button>
                            {#<a href="{{ path('ds_service_portal_service_index') }}" class="btn btn-link btn-lg">#}
                                {#Back#}
                            {#</a>#}
                        </form>
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}