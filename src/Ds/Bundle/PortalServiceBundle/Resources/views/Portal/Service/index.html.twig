{% extends 'DsPortalBundle:Portal:base.html.twig' %}

{% block breadcrumb %}
    <ul class="breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="{{ path('ds_portal_portal_home_index') }}">
                {% trans %}ds.portal.page.portal.home.index.title{% endtrans %}
            </a>
        </li>
        <li class="active">
            {% trans %}ds.portalservice.page.portal.service.index.title{% endtrans %}
        </li>
    </ul>
{% endblock %}

{% block content %}
    <div id="service-index">
        <div class="row">
            <div class="col-lg-12">
                <h1>
                    {% trans %}ds.portalservice.page.portal.service.index.title{% endtrans %}
                </h1>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <form role="search">
                            <input type="text" class="form-control" placeholder="{% trans %}ds.portalservice.page.portal.service.index.search.placeholder{% endtrans %}" style="border-top: 0px; border-right: 0px; border-left: 0px; font-size: 24px;" data-plugin="filter" data-filter-row="#services > .row" data-filter-data="h4 a">
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div id="services">
            {% for service in services %}
                <div class="row">
                    <div class="col-lg-12">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-lg-3">
                                        <h4>
                                            <a href="{{ path('ds_portalservice_portal_service_view', { id: service.id }) }}">
                                                {{ service.titles|localized_value }}
                                            </a>
                                        </h4>
                                    </div>
                                    <div class="col-lg-8">
                                        <p>
                                            {{ service.descriptions|localized_value }}
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="row">
                    <div class="col-lg-12">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <p>
                                    {% trans %}ds.portalservice.page.portal.service.index.grid.empty{% endtrans %}
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
