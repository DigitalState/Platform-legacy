{% extends 'OroUIBundle:actions:view.html.twig' %}

{% import 'OroUIBundle::macros.html.twig' as UI %}

{% block pageHeader %}
    {% set breadcrumbs = {
        entity: entity,
        indexPath: path('ds_message_message_index'),
        indexLabel: 'ds.message.menu.index.label'|trans,
        entityTitle: 'ds.message.entity_label'|trans ~ ' ' ~ entity.id
    } %}
    {{ parent() }}
{% endblock pageHeader %}

{% block navButtons %}
    {% if resource_granted('ds.message.message.edit', entity) %}
        {{ UI.editButton({
            path: path('ds_message_message_edit', { id: entity.id }),
            entity_label: 'ds.message.entity_label'|trans
        }) }}
    {% endif %}
    {% if resource_granted('ds.message.message.delete', entity) %}
        {{ UI.deleteButton({
            dataUrl: path('ds_message_api_rest_delete_message', { id: entity.id }),
            dataRedirect: path('ds_message_message_index'),
            aCss: 'no-hash remove-button',
            id: 'btn-remove-message',
            dataId: entity.id,
            entity_label: 'ds.message.entity_label'|trans,
        }) }}
    {% endif %}
{% endblock navButtons %}

{% block content_data %}
    {% set dataBlocks = [] %}
    {% for widget in ds_widgets({ position: 'ds_message_message_entity', context: context }, { entity: entity, context: context }) %}
        {% set dataBlocks = dataBlocks|merge([ {
            title: widget.title|trans,
            subblocks: [ {
                data : [ widget.content ]
            } ]
        } ]) %}
    {% endfor %}
    {% set id = 'message-view' %}
    {% set data = { dataBlocks: dataBlocks } %}
    {{ parent() }}
{% endblock content_data %}
