{% extends 'DsPortalBundle:Portal:base.html.twig' %}

{% block title %}Portal{% endblock %}

{% block breadcrumb %}
    <ul class="breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="{{ path('ds_portal_portal_home_index') }}">
                {% trans %}ds.portal.page.portal.home.index.title{% endtrans %}
            </a>
        </li>
        <li>
            <a href="{{ path('ds_portaltopic_portal_topic_index') }}">
                {% trans %}ds.portaltopic.page.portal.topic.index.title{% endtrans %}
            </a>
        </li>
        <li class="active">
            {{ topic.titles|localized_value }}
        </li>
    </ul>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h1>
                {{ topic.titles|localized_value }}
            </h1>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-lg-8">
            <div class="panel panel-default">
                <div class="panel-body">
                    {{ topic.presentations|localized_value|raw }}
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="panel panel-default">
                <div class="panel-body">
                    <p>
                        {% trans %}ds.portaltopic.page.portal.topic.view.channels.description{% endtrans %}
                    </p>
                    {{ form_start(form, { action: path('ds_portaltopic_portal_subscription_edit', { id: topic.id }) }) }}
                    {{ form_errors(form) }}
                    <h4>
                        {% trans %}ds.portaltopic.page.portal.topic.view.channels.title{% endtrans %}
                    </h4>
                    <ul class="list-group">
                        {% for channel in topic.channels %}
                            <li class="list-group-item">
                                <input type="checkbox" data-toggle="toggle" data-mirror="input[data-name=field__{{ channel.id }}]"{% if channel in subscription.channels %} checked{% endif %}> {{ channel.titles|localized_value }}
                            </li>
                        {% endfor %}
                    </ul>
                    <div style="visibility: hidden">
                        {{ form_widget(form) }}
                    </div>
                    {{ form_rest(form) }}
                    {{ form_end(form) }}
                    <script>
                        $(document).ready(function() {
                            $('input[data-mirror]').change(function() {
                                $($(this).data('mirror')).prop('checked', $(this).is(':checked'));

                                $('form[name="ds_portaltopic_portal_subscription"]').ajaxSubmit({
                                    type: 'post',
                                    dataType: 'json',
                                    success: function(response) {
                                        console.log(response);
                                    }
                                });
                            });
                        });
                    </script>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
