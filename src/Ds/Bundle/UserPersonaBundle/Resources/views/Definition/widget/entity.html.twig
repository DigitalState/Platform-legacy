{% import 'OroUIBundle::macros.html.twig' as UI %}

<div class="widget-content">
    <div class="row-fluid form-horizontal">
        <div class="responsive-block">
            {{ UI.renderProperty('ds.userpersona.definition.id.label'|trans, entity.id) }}
            {{ UI.renderProperty('ds.userpersona.definition.title.label'|trans, entity.title) }}
        </div>
        <div class="responsive-block">
            {{ UI.renderProperty('ds.userpersona.definition.slug.label'|trans, entity.slug) }}
        </div>
    </div>
    {% for widget in ds_widgets({ position: 'ds_userpersona_definition_entity_definition', context: context }, { entity: entity }) %}
        {{ widget.content|raw }}
    {% endfor %}
</div>
