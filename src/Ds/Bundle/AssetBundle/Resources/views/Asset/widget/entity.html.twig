{% import 'OroUIBundle::macros.html.twig' as UI %}

<div class="widget-content">
    <div class="row-fluid form-horizontal">
        <div class="responsive-block">
            {{ UI.renderProperty('ds.asset.id.label'|trans, entity.id) }}
            {{ UI.renderProperty('ds.asset.title.label'|trans, entity.defaultTitle) }}
            {{ UI.renderProperty('ds.asset.type.label'|trans, entity.type) }}
            {{ UI.renderProperty('ds.asset.source.label'|trans, entity.source) }}
        </div>
    </div>
    {% for widget in ds_widgets({ position: 'ds_asset_asset_entity_asset', context: context }, { entity: entity }) %}
        {{ widget.content|raw }}
    {% endfor %}
</div>
